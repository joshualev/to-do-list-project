<%- include('partials/header.ejs') %>
<a class="btn btn-primary" href="<%= baseUrl %>/new" role="button">Create a new task</a>

<div class="list-group list-group-checkable d-grid gap-2 border-0 w-auto">
  <% for ( let i = 0; i < lists.length; i++ ) { %> 
  <% if (lists[i].status === false){%>  
          
        <input class="list-group-item-check pe-none" type="radio" name="listGroupCheckableRadios" id="listGroupCheckableRadios<%=[i]%>">
      <a label class="list-group-item rounded-3 py-3" href="<%= baseUrl %>/<%=lists[i].id%>" for="listGroupCheckableRadios<%=[i]%>">
        <h6><%=lists[i].title%> 
          <object>  <a href="<%= baseUrl %>/<%=lists[i].id%>/edit" class="text-decoration-none">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square badge-primary" viewBox="0 0 16 16">
        <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"></path>
        <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"></path>
        </svg>
          </a></object>
       </h6>
        <span class="d-block small opacity-50">
          <%=lists[i].category %> 
          <br> 
          <%=lists[i].priority%> priority 
          <br>
          <% if (lists[i].dateDue) { %> 
          Due by <%=lists[i].dateDue.toString().slice(0,15) %> 
          <% } %> 
        </span>
      </label>
      <form class="formWithButtons" action="<%= baseUrl %>/<%= lists[i].id %>?_method=put" method="post">
        <input type="checkbox" name="status" value="on" checked hidden>
        <input type="submit" class="btn btn-success" value="Complete">
        <form class="formWithButtons" action="<%= baseUrl %>/<%= lists[i].id %>?_method=delete" method="post">
          <input type="submit" class="btn btn-danger" value="Remove">
        </form>
      </form>
    </a>
    <% } %> 
  <% } %> 


