<%- include('partials/header.ejs') %>

  <div id="change-list" class="card">
    <div class="card-header">
      <div>
        <h3 class="card-title"><%=list.title%>
          <h6><%=list.category%> </h6>
        </h3>
      </div>
    </div>
    <div class="card-body"''>
        <% if (list.description) { %> 
        <h5 class="card-title"><%=list.description%></h5>
        <% } else { %> 
            <p class="card-text">There is no description set</p>
            <% } %> 
        <% if(list.dateDue) { %> 
      <p class="card-text">Due by <%=list.dateDue.toString().slice(0,10) %> </p>
      <% } else { %> 
    <p class="card-text">There is no due date set</p>
    <% } %> 
    <p class="card-text"><%=list.priority.charAt(0).toUpperCase() + list.priority.slice(1)%> priority</p>

        <object>
          <a class=" mt-2 btn btn-primary" href="<%= baseUrl %>/<%=list.id%>/edit">Edit
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
          <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"></path>
          <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"></path>
          </svg>
        </a>
      </object>
      
      <form class="formWithButtons" action="<%=baseUrl%>/<%=list.id%>?_method=delete" method="post">
        <input type="submit" value="remove" class="mt-2 btn btn-secondary">
      
    </form>
    </div>
  </div>


<%- include('partials/footer.ejs') %>