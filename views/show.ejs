<%- include('partials/header.ejs') %>

  <div id="change-list" class="card">
    <div class="card-header">
      <div>
        <h3 class="card-title"><%=list.title%>
          <h6><%=list.category%> </h6>
        </h3>
      </div>
    </div>
    <div class="card-body"''>
        <% if (list.description) { %> 
        <h5 class="card-title"><%=list.description%></h5>
        <% } else { %> 
            <p class="card-text">There is no description set</p>
            <% } %> 
        <% if(list.dateDue) { %> 
      <p class="card-text">Due by <%=list.dateDue.toString().slice(0,10) %> </p>
      <% } else { %> 
    <p class="card-text">There is no due date set</p>
    <% } %> 
    <p class="card-text"><%=list.priority.charAt(0).toUpperCase() + list.priority.slice(1)%> priority</p>

    <form class="formWithButtons" action="<%= baseUrl %>/<%= list.id %>?_method=delete" method="post">
        <object><a class="btn btn-outline-primary" href="<%= baseUrl %>/<%=list.id%>/edit">Edit
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="mb-1 bi bi-pencil-square" viewBox="0 0 16 16">
          <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"></path>
          <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"></path>
          </svg>
        </a></object>
        <button type="button" value="remove" class="btn btn-outline-danger">Delete
          <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="mb-1 bi bi-trash2" viewBox="0 0 16 16">
        <path d="M14 3a.702.702 0 0 1-.037.225l-1.684 10.104A2 2 0 0 1 10.305 15H5.694a2 2 0 0 1-1.973-1.671L2.037 3.225A.703.703 0 0 1 2 3c0-1.105 2.686-2 6-2s6 .895 6 2zM3.215 4.207l1.493 8.957a1 1 0 0 0 .986.836h4.612a1 1 0 0 0 .986-.836l1.493-8.957C11.69 4.689 9.954 5 8 5c-1.954 0-3.69-.311-4.785-.793z"></path>
        </svg></button>
      </form>
    </div>
  </div>


<%- include('partials/footer.ejs') %>