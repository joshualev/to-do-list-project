              </ul>
            </div>
            <p class="navbar-text">Signed in as <%=currentUser.username%> </p>
          </ul>
          
              <form action="/logout?_method=delete" method="post">
                <input type="button" class="nav-item" value="Sign out">
              </form>
              <% } else { %>
                  <li class="nav-item"><a href="/login" class="nav-link active" aria-current="page">Login</a></li>
                  <li class="nav-item"><a href="user/signup" class="nav-link">Sign up</a></li>
              <% } %>
          </ul>

        </div>
