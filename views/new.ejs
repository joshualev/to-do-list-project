<%- include('partials/header.ejs') %>

<form action="<%= baseUrl %>" method="post"> 

    <div class="card">
        <div class="card-header">
          Create Task
        </div>
        <div class="card-body">
          <h5 class="card-title">Task</h5>
          <input type="text" required name="title" id="title" placeholder="Task name">
          <h5 class="card-title">Description</h5>
          <textarea class="form-control" name="description" id="description" rows="3" id="comment" placeholder="Description"></textarea>
          <h5 class="card-title">Priority</h5>
          <div class="radio">
            <label><input type="radio" name="priority" value="Low" checked> Low</label>
          </div>
          <div class="radio">
            <label><input type="radio" name="priority" value="Medium"> Medium</label>
          </div>
          <div class="radio">
            <label><input type="radio" name="priority" value="High"> High</label>
          </div>
          <h5 class="card-title">Due date</h5>
          <input type="date" name="dateDue"> 
        <input type="submit" class="btn btn-primary" value="Create task">
        </div>
      </div>
    </form>

<%- include('partials/footer.ejs') %>